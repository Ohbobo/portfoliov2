---
import { linksMenu } from "../../localData/localdata"
---

<header class="mt-5">
    <nav class="flex justify-between ">
        <h1 class="text-slate-300 font-semibold">theo.dev</h1>
        <div class="flex gap-6 items-center">
            <ul class="flex gap-6">
                {linksMenu.map(link => (
                    <li><a class="text-slate-300 font-semibold" href={link.path}>{link.name}</a></li>
                ))}
            </ul>
            <button type="button" class="text-slate-300 font-semibold px-6 py-3 rounded-md bg-gradient-to-r from-green-400 to-blue-500 hover:from-pink-500 hover:to-yellow-500">Connexion</button>
        </div>
    </nav>
</header>