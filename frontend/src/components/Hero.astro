---
import Button from './ui_components/button.astro';

const heroButtons = [
    {
        text: 'Github',
        path: 'https://github.com/Ohbobo',
        icon: 'ri:github-line',
        style: 'primary',
    },
    {
        text: 'Contact',
        path: '#contact',
        icon: 'ri:mail-fill',
        style: 'transparent'
    },
]
---

<section class="flex flex-col gap-6">
    <div class="flex flex-col gap-2">
        <p class="text-2xl">Hello, je suis</p>
        <h2 class="text-5xl">Th√©o</h2>
        <p class="text-3xl">Developpeur web depuis 2023 !</p>
    </div>
    <div class="flex gap-4">
        {heroButtons.map(btn => (
            <Button 
                size={'lg'} 
                style={btn.style} 
                icon={btn.icon} 
                path={btn.path} 
                text={btn.text}>
            </Button>
        ))}
    </div>
</section>