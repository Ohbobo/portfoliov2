---
interface Props {
	title: string
}

const { title }: Props = Astro.props
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="description" content="Développeur web full-stack, laissez moi vous aider pour faire avancer vos projets et idées !">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="max-w-screen-xl h-auto mx-auto bg-gray-100">
		<slot />
	</body>
</html>